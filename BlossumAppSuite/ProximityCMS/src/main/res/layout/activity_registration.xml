<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    tools:context=".RegistrationActivity">

    <RelativeLayout
        android:id="@+id/REG_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/REG_title"
            android:text="@string/prox"
            style="@style/Title2TextStyleBlack"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Register Company App"
            style="@style/TextStyle"
            android:layout_marginTop="15dp"
            android:layout_below="@id/REG_title"
            android:layout_width="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <TextView
            android:text="pCMS"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/xred_oval2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/REG_lay2"
        android:layout_below="@id/REG_lay1"
        android:background="@color/white" android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/REG_editCompanyName"
            android:hint="Enter Company Name"
            android:inputType="textCapWords"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/REG_editBranchName"
            android:hint="Enter Branch Name"
            android:layout_marginTop="15dp"
            android:layout_below="@id/REG_editCompanyName"
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/REG_spinner"
            android:layout_below="@id/REG_editBranchName"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/REG_btnSave"
            android:layout_below="@id/REG_spinner"
            android:layout_marginTop="40dp"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>
