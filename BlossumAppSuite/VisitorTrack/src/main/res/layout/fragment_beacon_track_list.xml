<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/beige_pale"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/BEAC_top"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/BEAC_beaconName"
            android:text="Beacon Name"
            style="@style/Title2TextStyleRed"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/BEAC_count"
            android:text="00"
            android:background="@drawable/xblue_oval"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ListView
        android:id="@+id/BEAC_list"
        android:layout_below="@id/BEAC_top"
        android:layout_marginTop="10dp"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>